<div class="new_backgr d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="custom-card">
          <div class="card-body">
            <h1 class="text-center mb-4">Create a New List</h1>
            <%= simple_form_for @list, html: { class: 'form' } do |f| %>
              <div class="form-group">
                <%= f.input :name, input_html: { class: 'form-control', placeholder: 'Enter list name' } %>
              </div>
              <div class="form-group">
                <%= f.input :photo, as: :file, input_html: { class: 'form-control-file' } %>
              </div>
              <div class="form-group text-center">
                <%= f.submit 'Create List', class: 'btn btn-primary btn-lg' %>
              </div>
            <% end %>
            <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary btn-block mt-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
